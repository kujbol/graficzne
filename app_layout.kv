MyPaintWidget:
    id: 'painting_area'
    orientation: 'horizontal'
    object_settings_box:object_settings
    additional_settings_box:additional_settings
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        id: buttons_layout
        orientation: 'vertical'
        size_hint: (.2, 1)

        BoxLayout:
            id: object_settings
            orientation: 'vertical'
            size_hint: (1, .60)
            Label:
                text: '[color=000000]Color (R, G, B, A)[/color]'
                markup: True
                size_hint_y: .1
            TextInput:
                id: color_textbox
                multiline: 'false'
                size_hint_y: .1
                on_text: root.on_update_settings(color_textbox, typ='color')
            Label:
                text: '[color=000000]Anty Aliasing[/color]'
                markup: True
                size_hint_y: .08
            CheckBox:
                id: anty_aliasing_checkbox
                size_hint_y: .05
                on_press: root.on_update_settings(anty_aliasing_checkbox)
            BoxLayout:
                id: additional_settings
                orientation: 'vertical'

        BoxLayout:
            id: new_objects
            orientation: 'vertical'
            size_hint: (1, .40)
            Label:
                text: '[color=000000]Available actions[/color]'
                markup: True
                size_hint_y: .3
            Button:
                id: 'line'
                text: 'Line'
                on_press: root.on_press_button(MyLine)
            Button:
                id: 'ellipse'
                text: 'Ellipse'
                on_press: root.on_press_button(MyEllipse)
            Button:
                id: 'circle'
                text: 'Circle'
                on_press: root.on_press_button(Circle)
            Button:
                id: 'polygon'
                text: 'Polygon'
                on_press: root.on_press_button(Polygon)
            Button:
                id: 'light'
                text: 'Light'
                on_press: root.on_press_button(Light)
            Button:
                id: 'viewer'
                text: 'Viewer'
                on_press: root.on_press_button(Viewer)
            Button:
                id: 'remove'
                text: 'Remove'
                on_press: root.remove_active_obj()

    BoxLayout:
        size_hint: (.8, 1)